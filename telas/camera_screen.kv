#:kivy 1.9.1

<CameraScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            TextInput:
                id: input_teste 
                text: "640, 480"
                multiline: False
            Button:
                text: 'Set Camera Resolution'
                on_press: root.set_camera_resolution()
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Back to home'
                on_press: root.manager.current = 'home'
            BoxLayout:
                id: slider_box
                orientation: 'vertical'
                Slider:
                    id: red_value
                    min: 0
                    max: 255
                    value_track: 'int'
                    step: 1
                    on_value: root.update_color()
                Slider:
                    id: green_value
                    min: 0
                    max: 255
                    value_track: 'int'
                    step: 1
                    on_value: root.update_color()
                Slider:
                    id: blue_value
                    min: 0
                    max: 255
                    value_track: 'int'
                    step: 1
                    on_value: root.update_color()
            BoxLayout:
                id: color_box_layout
                orientation: 'vertical'
                Label:
                    id: red_value_label
                    text: 'red_value ' + str(red_value.value)
                Label:
                    id: green_value_label
                    text: 'green_value ' + str(green_value.value)
                Label:
                    id: blue_value_label
                    text: 'blue_value ' + str(blue_value.value)
            CustomColorBox:
                id: color_box
