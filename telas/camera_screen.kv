#:kivy 1.9.1

<CameraScreen>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: input_teste 
            text: "640, 480"
            multiline: False
        Button:
            text: 'Set Camera Resolution'
            on_press: root.set_camera_resolution()
        BoxLayout:
            orientation: 'horizontal'
            Button: 
                text: 'Ligar camera'
                on_press: root.camera_start()
        Button:
            text: 'Back to home'
            on_press: root.manager.current = 'home'