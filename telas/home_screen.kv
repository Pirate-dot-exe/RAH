#:kivy 1.9.1

<HomeScreen>:
    BoxLayout:
        id: home_main_box
        orientation: 'vertical'
        BoxLayout:
            id: camera_box
            orientation: 'horizontal'
            Image:
                id: camera_icon
                source: 'images/camera.png'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.25
            Button:
                text: 'Pause/Play'
                on_press: root.play_stop_camera()
            Button:
                text: 'Go to bluetooth'
                on_press: root.manager.current = 'bluetooth_config'
                size_hint: 0.5, 1
            Button:
                text: 'Goto settings'
                on_press: root.manager.current = 'camera_config'
                size_hint: 0.5, 1
            Button:
                text: 'Quit'
                size_hint: 0.5, 1  #x, y
                on_press: root.quit() 
